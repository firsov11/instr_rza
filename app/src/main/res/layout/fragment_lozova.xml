<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lozova.LozovaFragment">

    <LinearLayout
        android:id="@+id/lozova_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/lozovag_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lozovageneral"
            android:contentDescription="@string/lozovageneral_image_desc"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_lozova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:text="@string/lozova_part"
            android:paddingBottom="16dp" />

        <ImageView
            android:id="@+id/lozovad_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lozovadiamant"
            android:contentDescription="@string/lozovadiamant_image_desc" />

        <TextView
            android:id="@+id/text_lozova_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:text="@string/lozova_second_part"
            android:paddingBottom="16dp" />

        <ImageView
            android:id="@+id/lozovad_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lozovadiamantru"
            android:contentDescription="@string/lozovadiamantru_image_desc" />

        <TextView
            android:id="@+id/text_lozova_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:text="@string/lozova_third_part"
            android:paddingBottom="16dp" />

        <ImageView
            android:id="@+id/lozovad_image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lozovakedrprm"
            android:contentDescription="@string/lozovakedrprm_image_desc" />

        <TextView
            android:id="@+id/text_lozova_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:text="@string/lozova_fourth_part"
            android:paddingBottom="16dp" />

        <ImageView
            android:id="@+id/lozovad_image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lozovakedrprd"
            android:contentDescription="@string/lozovakedrprd_image_desc" />

        <TextView
            android:id="@+id/text_lozova_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:text="@string/lozova_fifth_part"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
